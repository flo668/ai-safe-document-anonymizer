[Unit]
Description=Flask Anonimiseren Tool
After=network.target

[Service]
User=nightstory
WorkingDirectory=/home/nightstory/apps/flask-anonimiseren-tool
Environment="PATH=/home/nightstory/apps/flask-anonimiseren-tool/venv/bin"
Environment="FLASK_ENV=production"
Environment="SECRET_KEY=production-secret-key-replace-me"
ExecStart=/home/nightstory/apps/flask-anonimiseren-tool/venv/bin/gunicorn -w 4 -b 127.0.0.1:5002 --timeout 300 app:app
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
