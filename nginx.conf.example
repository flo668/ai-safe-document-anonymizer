# Nginx configuration for Anonimiseren Tool
# Place this in /etc/nginx/sites-available/anonimiseren-tool
# Then: sudo ln -s /etc/nginx/sites-available/anonimiseren-tool /etc/nginx/sites-enabled/
# Test: sudo nginx -t
# Reload: sudo systemctl reload nginx

server {
    listen 80;
    server_name your-domain.com www.your-domain.com;  # CHANGE THIS

    # Max upload size (moet matchen met Flask config)
    client_max_body_size 100M;

    # Logging
    access_log /var/log/nginx/anonimiseren-access.log;
    error_log /var/log/nginx/anonimiseren-error.log;

    # Static files
    location /static {
        alias /path/to/flask-anonimiseren-tool/static;  # CHANGE THIS
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    # Proxy to Flask/Gunicorn
    location / {
        proxy_pass http://127.0.0.1:5000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Timeouts voor lange uploads
        proxy_connect_timeout 300;
        proxy_send_timeout 300;
        proxy_read_timeout 300;
        send_timeout 300;
    }
}

